{
  "core": {
    "applicationName": "Your Game",
    "godot": "/Applications/Apps/Godot.app/Contents/MacOS/Godot"
  },
  "generate:icons": {
    "input": "_release/images/",
    "output": "assets/generated/icons",
    "base": "icon-1200x1200.png",
    "desktop": "icon-desktop-512x512.png",
    "background": "adaptive-background.png",
    "foreground": "adaptive-foreground.png"
  },
  "generate:splashscreens": {
    "input": "_release/images/base-splashscreen.png",
    "output": "assets/generated/splashscreens"
  },
  "generate:screenshots": {
    "input": "_release/raw-shots",
    "output": "_release/generated/screenshots"
  },
  "run:editor": {
    "resolution": "2980x2220",
    "position": "0,0"
  },
  "update-po-files": {
    "poFiles": "./assets/translations/*.po",
    "potTemplate": "./assets/translations/locales.pot"
  },
  "run:game": {
    "position": "1120,20"
  },
  "bundles": {
    "yourApp": {
      "uid": "com.your.app.id"
    }
  }
}
