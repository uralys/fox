{
  "core": {
    "applicationName": "Your Game",
    "godot": "/Applications/Apps/Godot.app/Contents/MacOS/Godot"
  },
  "generate:icons": {
    "input": "_release/images/",
    "output": "assets/generated/icons",
    "base": "icon-1200x1200.png",
    "desktop": "icon-desktop-512x512.png",
    "background": "adaptive-background.png",
    "foreground": "adaptive-foreground.png"
  },
  "generate:splashscreens": {
    "input": "_release/images/base-splashscreen.png",
    "output": "assets/generated/splashscreens"
  },
  "generate:screenshots": {
    "input": "_release/images/raw-shots",
    "output": "_release/images/generated-screenshots",
    "orientation": "landscape",
    "sizes": [
      { "name": "iPhone_6'7", "resolution": "2796x1290" },
      { "name": "iPhone_6'5", "resolution": "2778x1284" },
      { "name": "iPhone_5'5", "resolution": "2208x1242" },
      { "name": "iPad_12'9", "resolution": "2732x2048" },
      { "name": "16'9", "resolution": "2160x1215" },
      { "name": "4'3", "resolution": "1440x1080" },
      { "name": "macOS", "resolution": "2560x1600" },
      { "name": "webp-16'9", "resolution": "2160x1215", "extension": ".webp" }
    ]
  },
  "run:editor": {
    "resolution": "2980x2220",
    "position": "0,0"
  },
  "update-po-files": {
    "poFiles": "./assets/translations/*.po",
    "potTemplate": "./assets/translations/locales.pot"
  },
  "run:game": {
    "position": "1120,20"
  },
  "bundles": {
    "yourApp": {
      "uid": "com.your.app.id"
    }
  }
}
